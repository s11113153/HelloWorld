<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  tools:context=".MainActivity"
  android:orientation="vertical"
  android:background="@drawable/demo_backgroud">

  <LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <TextView
      android:textSize="24sp"
      android:id="@+id/tv_different_value"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:textSize="24sp"
      android:text="@string/different"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:paddingLeft="50dp"
      android:gravity="left"
      android:layout_weight="1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="24sp"
        android:text="@string/get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <TextView
        android:id="@+id/tv_get"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
      android:paddingRight="50dp"
      android:gravity="right"
      android:layout_weight="1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="24sp"
        android:text="@string/consumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <TextView
        android:textSize="20sp"
        android:id="@+id/tv_consumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>


  </LinearLayout>

  <LinearLayout
    android:gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
      android:background="@drawable/bg_eat"
      android:layout_marginTop="25dp"
      android:id="@+id/btn_eating"
      android:layout_width="120dp"
      android:layout_height="45dp"/>
    <Button
      android:background="@drawable/bg_motation"
      android:layout_marginTop="25dp"
      android:id="@+id/btn_motion"
      android:layout_width="120dp"
      android:layout_height="45dp"/>
    <Button
      android:background="@drawable/bg_record"
      android:layout_marginTop="25dp"
      android:id="@+id/btn_record"
      android:layout_width="120dp"
      android:layout_height="45dp"/>
    <Button
      android:layout_marginTop="25dp"
      android:id="@+id/btn_bmi"
      android:background="@drawable/bg_bmi"
      android:layout_width="120dp"
      android:layout_height="45dp"/>
  </LinearLayout>
</LinearLayout>
