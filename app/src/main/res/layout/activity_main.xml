<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  tools:context=".MainActivity"
  android:orientation="vertical"
  android:background="@drawable/demo_backgroud"
  android:alpha="10">

  <LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <TextView
      android:textSize="24sp"
      android:id="@+id/tv_different_value"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:textSize="24sp"
      android:text="@string/today_different"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:paddingLeft="50dp"
      android:gravity="left"
      android:layout_weight="1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="24sp"
        android:text="@string/get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <TextView
        android:id="@+id/tv_get"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
      android:paddingRight="50dp"
      android:gravity="right"
      android:layout_weight="1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="24sp"
        android:text="@string/consumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <TextView
        android:textSize="20sp"
        android:id="@+id/tv_consumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>


  </LinearLayout>

  <LinearLayout
    android:gravity="center_horizontal"
    android:layout_marginTop="60dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <Button
        android:id="@+id/btn_eating"
        android:text="@string/eating"
        android:layout_width="160dp"
        android:layout_height="50dp"/>
      <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignRight="@+id/btn_eating"
        android:background="@drawable/bg_eat"
        android:layout_width="40dp"
        android:layout_height="30dp"/>
    </RelativeLayout>

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <Button
        android:id="@+id/btn_motion"
        android:text="@string/motion"
        android:layout_width="160dp"
        android:layout_height="50dp"/>
      <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignRight="@+id/btn_motion"
        android:background="@drawable/bg_motation"
        android:layout_width="40dp"
        android:layout_height="30dp"/>
    </RelativeLayout>

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <Button
        android:id="@+id/btn_record"
        android:text="@string/record"
        android:layout_width="160dp"
        android:layout_height="50dp"/>
      <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignRight="@+id/btn_record"
        android:background="@drawable/bg_record"
        android:layout_width="40dp"
        android:layout_height="30dp"/>
    </RelativeLayout>

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <Button
        android:id="@+id/btn_bmi"
        android:text="BMI"
        android:layout_width="160dp"
        android:layout_height="50dp"/>
      <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignRight="@+id/btn_bmi"
        android:background="@drawable/bg_bmi"
        android:layout_width="40dp"
        android:layout_height="30dp"/>
    </RelativeLayout>

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <Button
        android:id="@+id/btn_target"
        android:text="目標"
        android:layout_width="160dp"
        android:layout_height="50dp"/>
      <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignRight="@+id/btn_target"
        android:background="@drawable/bg_target"
        android:layout_width="40dp"
        android:layout_height="30dp"/>
    </RelativeLayout>

  </LinearLayout>
</LinearLayout>
